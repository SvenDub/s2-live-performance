@using Util
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>'t Skoepke</h1>
    <p class="lead">Welkom bij bootverhuur <i>'t Skoepke</i>!
    </p>
    <p><a href="@Url.Action("Index", "Rent")" class="btn btn-primary btn-lg">Nu Huren</a>
    </p>
</div>

<table>
    <tr><td>Datum</td><td>Gevoelstemperatuur</td></tr>
    @foreach (KeyValuePair<DateTime, double> keyValuePair in Temperature.GetWindChill())
    {
        <tr>
            <td>@keyValuePair.Key</td><td>@keyValuePair.Value</td>
        </tr>
    }
</table>