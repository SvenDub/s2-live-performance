@model Live_Performance.Entity.Boat

@{
    ViewBag.Title = "Nieuwe Boot";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("New", "Boat"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(boat => boat.Id)

    <div class="form-group label-floating">
        @Html.LabelFor(boat => boat.Name, new {@class = "control-label"})
        @Html.EditorFor(boat => boat.Name, new {htmlAttributes = new {@class = "form-control"}})
    </div>

    <div class="form-group">
        @Html.LabelFor(boat => boat.BoatType, new { @class = "control-label" })
        @Html.DropDownListFor(boat => boat.BoatType.Id, (IEnumerable<SelectListItem>)ViewBag.AvailableBoatTypes, new { @class = "form-control" })
    </div>

    <br />

    <input class="btn btn-primary btn-raised" type="submit" value="Toevoegen" />
    <input class="btn btn-raised" type="button" onclick="location.href = '@Url.Action("Index", "Boat")'" value="Annuleren" />
}